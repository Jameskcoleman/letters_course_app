<div class="container">
  <div class='well'>
    <%= form_tag '/login' do %>
      <div class='control-group'>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <div class='control-group'>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag 'Login', class: 'btn btn-primary' %>
    <% end %>
    <%= link_to "Forgot Password?", forgot_password_path %>
  </div>
</div>