<%= render 'shared/header' %>
<div class="container">
  <div class="row">
    <%= form_for @post do |f| %>
      <div class='row'>
        <div class='control-group'>
          <%= f.label :title %>
          </br>
          <%= f.text_field :title, class: "col-md-8" %>
        </div>
      </div>
      <div class='row'>
        <div class='control-group'>
          <%= f.label :body %>
          </br>
          <%= f.text_area :body, rows: 12, class: "col-md-8" %>
        </div>
      </div>
      </br>
      <div class='row'>
        <div class='control-group'>
          <%= f.submit(@post.new_record? ? 'Create Post' : 'Update Post', class: 'btn btn-primary')%>
        </div>
      </div>
    <% end %>
  </div>
</div>