<%= render 'shared/header' %>
<div class="container">
  <div class="row">
    <div class="well">
      <h1>Discussions</h1>
    </div>
  </div>
  <div class="row">     
    <p>
      <a class="btn btn-lg btn-primary" href="../../posts/new" role="button">Create New Post &raquo;
      </a>
    </p>
  </div>
  <% @posts.each do |post| %>
    <%= render 'post', post: post %>
  <% end %>
</div>